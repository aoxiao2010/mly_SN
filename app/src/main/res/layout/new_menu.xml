<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:id="@+id/new_menu"
    tools:context="com.example.administrator.neuroelectricstimulator.MainActivity">

    <LinearLayout
        android:id="@+id/fragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/mine"
            android:textSize="20sp"
            android:textColor="#808080"
            android:gravity="center"
            android:drawableTop="@drawable/mine1"
            android:drawablePadding="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"/>

    <LinearLayout
        android:id="@+id/fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/list_selector"
        android:addStatesFromChildren="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/treatment"
            android:textSize="20sp"
            android:textColor="#808080"
            android:gravity="center"
            android:drawableStart="@drawable/treatment1"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:drawablePadding="25dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"/>

    <LinearLayout
        android:id="@+id/fragment3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/list_selector"
        android:addStatesFromChildren="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/equipment"
            android:textSize="20sp"
            android:textColor="#808080"
            android:gravity="center"
            android:drawableStart="@drawable/equipment1"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:drawablePadding="25dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"/>

    <LinearLayout
        android:id="@+id/fragment4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/list_selector"
        android:addStatesFromChildren="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/prescription"
            android:textSize="20sp"
            android:textColor="#808080"
            android:gravity="center"
            android:drawableStart="@drawable/prescription1"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:drawablePadding="25dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"/>

    <LinearLayout
        android:id="@+id/fragment5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/list_selector"
        android:addStatesFromChildren="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/report"
            android:textSize="20sp"
            android:textColor="#808080"
            android:gravity="center"
            android:drawableStart="@drawable/report1"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:drawablePadding="25dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"/>

</LinearLayout>
