<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/child_equipmentLayout"
    android:layout_height="match_parent">

    <com.example.administrator.neuroelectricstimulator.SlideDelete
        android:id="@+id/child_equipment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageBtn"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/equipment"
                android:src="@drawable/es02" />
            <LinearLayout
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/txtcfName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bianmi"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/treatmentposition"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/txtcf_BW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="足三里"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="处方ID:"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="I0001"
                        android:id="@+id/txtcf_ID"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bluetooth"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/txtMAC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9B:F1:22:2F:FB:C7"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="设备状态:"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/txtStaus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未连接"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="数据内存:"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/txt_Capacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="有"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/btnDownload"
                android:text="下载"
                android:textColor="@color/darkBlue"
                android:background="@color/lilac2"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btnDelete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/lilac"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/darkBlue"
                android:textSize="20sp" />
        </LinearLayout>
    </com.example.administrator.neuroelectricstimulator.SlideDelete>

</LinearLayout>
